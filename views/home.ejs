<!DOCTYPE html>
<html>
<%- include head %>
<body class="home" data-twitter-auth="<%= isTwitterAuth %>" data-facebook-auth="<%= isFacebookAuth %>" data-instagram-auth="<%= isInstagramAuth %>" data-dropbox-auth="<%= isDropboxAuth %>">
  
  <section id="lead">
    <header id="header-home">
      <hgroup>
        <a href="/"><h1>PhotoPipe</h1></a>
        <h2>Take Control of <em>Your</em> Photos</h2>
      </hgroup>
    </header>
  </section>
  
  <section id="account">

    <div class="login left">
      
      <h3 class="login-header">Login <em class="cool">or</em> Signup</h3>
      <hr>
    
      <form action="/account/login" enctype="application/x-www-form-urlencoded" method="post">
        
        <fieldset>
          
          <% if(hasErrors){ %>
          <div class="form-item-wrapper">
            <p class="error-heading">Whoops!</p>
            <p class="error-copy"><%- error_message %></p>
          </div>
          <% }%>
          
          <div class="form-item-wrapper">
            <label class="form-item" for='email_address'>Email Address</label>
            <input autofocus  class="input-item login-form" type='email' name='email_address' id="email_address">
          </div>
          
          <div class="form-item-wrapper">
            <label class="form-item" for='password'>Password</label>
            <input class="input-item login-form" required type='password' name='password' id="password" value=''>
          </div>

          <div class="form-item-wrapper">
            <input class="button pipe form-item go" type='submit' value='Go!'>
          </div>

          <div class="form-item-wrapper">
            <div class="form-item">
              <p>
                <a href="/account/forgot" class="hit-target">Forgot your password?</a>
              </p>
            </div>
          </div>

        </fieldset>
        
      </form>
    </div>

  </section>
