<!DOCTYPE html>
<html>
<%- include head %>
<body class="home" data-twitter-auth="<%= isTwitterAuth %>" data-facebook-auth="<%= isFacebookAuth %>" data-instagram-auth="<%= isInstagramAuth %>" data-dropbox-auth="<%= isDropboxAuth %>">
  
  <section id="lead">
    <header id="header-home">
      <hgroup>
        <h1>PhotoPipe</h1>
        <h2>Take Control of <em>Your</em> Photos</h2>
      </hgroup>
    </header>
  </section>
  
  <section id="account">

    <div class="login left">
      
      <h3 class="login-header">Create your Username</h3>
      <hr>
    
      <form action="/account/username" enctype="application/x-www-form-urlencoded" method="post">
        
        <fieldset>
          
          <% if(hasErrors){ %>
          <div class="form-item-wrapper">
            <p class="error-heading">Whoops!</p>
            <p class="error-copy"><%- error_message %></p>
          </div>
          <% }%>
          
          <div class="form-item-wrapper">
            <label class="form-item" for='account-username'>Username</label>
            <input type='hidden' name='account-email-address' value="<%- account_email_address %>">
            <input autofocus class="input-item login-form" type='username' name='account-username' id="account-username">
          </div>

          <div class="form-item-wrapper">
            <input class="button pipe form-item go" type='submit' value='Go!'>
          </div>

        </fieldset>
        
      </form>
    </div>

  </section>

    
  <%- include scripts %>
</body>
