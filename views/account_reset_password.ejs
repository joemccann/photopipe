<!DOCTYPE html>
<html>
<%- include head %>
<body data-twitter-auth="<%= isTwitterAuth %>" data-facebook-auth="<%= isFacebookAuth %>" data-instagram-auth="<%= isInstagramAuth %>" data-dropbox-auth="<%= isDropboxAuth %>">
  <div id="main">
    
    <section id="login">
    
      <header>
        <h1>Forgot your Password?</h1>
        <p class="login-copy">Please enter a new <br>password for your account.</p>
      </header>
      
      <% if(hasErrors){ %>
        <p class="error-heading">Error!</p>
        <p class="error-copy"><%- error_message %></p>
      <% }%>
    
      <form action="/account/reset_password" enctype="application/x-www-form-urlencoded" method="post">
        <fieldset>
          <input type='hidden' class="login-form" name='reset_email_address' id="reset_email_address" value="<%- email_address %>">
          <label for='reset_password'>New Password</label>
          <input type='password' class="login-form" name='reset_password' id="reset_password" value="">
          <input class="button pipe" type='submit' value='Reset It!'>
        </fieldset>
        
      </form>
    
      <%- include debug %>
      
    </section>
    
  </div> <!-- end #main -->
  
  <iframe src="" id="downloader" class="none"></iframe>
  
	<div id="overlay"></div>
  
  <%- include scripts %>
</body>
