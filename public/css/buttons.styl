/* http://www.red-team-design.com/wp-content/uploads/2011/09/awesome-css3-buttons.html */

.button
  display: inline-block;
  white-space: nowrap;
  background-color: #DDD;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#EEE), to(mainColor));
  background-image: -webkit-linear-gradient(top, #EEE, mainColor);
  background-image: -moz-linear-gradient(top, #EEE, mainColor);
  background-image: -ms-linear-gradient(top, #EEE, mainColor);
  background-image: -o-linear-gradient(top, #EEE, mainColor);
  background-image: linear-gradient(top, #EEE, mainColor);
  border: 1px solid #777;
  padding: 0 1.5em;
  margin: 0.5em 0;
  font: bold 2em/2em Arial, Helvetica;
  text-decoration: none;
  color: #333;
  text-shadow: 0 1px 0 rgba(255, 255, 255, .8);
  -moz-border-radius: .2em;
  -webkit-border-radius: .2em;
  border-radius: .2em;
  -moz-box-shadow: 0 0 1px 1px rgba(255,255,255,.8) inset, 0 1px 0 rgba(0,0,0,.3);
  -webkit-box-shadow: 0 0 1px 1px rgba(255, 255, 255, .8) inset, 0 1px 0 rgba(0, 0, 0, .3);
  box-shadow: 0 0 1px 1px rgba(255, 255, 255, .8) inset, 0 1px 0 rgba(0, 0, 0, .3)
  cursor pointer

.button:hover
  background-color #fff
  background-image: -webkit-gradient(linear, left top, left bottom, from(#EEE), to(lighten(mainColor,20)));
  background-image: -webkit-linear-gradient(top, #EEE, lighten(mainColor,20));
  background-image: -moz-linear-gradient(top, #EEE, lighten(mainColor,20));
  background-image: -ms-linear-gradient(top, #EEE, lighten(mainColor,20));
  background-image: -o-linear-gradient(top, #EEE, lighten(mainColor,20));
  background-image: linear-gradient(top, #EEE, lighten(mainColor,20));

.button:active
  -moz-box-shadow 0 0 4px 2px rgba(0,0,0,.3) inset
  -webkit-box-shadow 0 0 4px 2px rgba(0,0,0,.3) inset
  box-shadow 0 0 4px 2px rgba(0,0,0,.3) inset
  position relative
  top 1px

.button:focus
  outline 0
  background #fafafa

.button:before
  background rgba(0,0,0,.1)
  float left
  width 1em
  text-align center
  font-size 1.5em
  margin 0 1em 0 -1em
  padding 0 .2em
  -moz-box-shadow 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5)
  -webkit-box-shadow 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5)
  box-shadow 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5)
  -moz-border-radius .15em 0 0 .15em
  -webkit-border-radius .15em 0 0 .15em
  border-radius .15em 0 0 .15em
  pointer-events none

.pipe
  display block
  margin 3% auto 0%
  
.add:before
  content "\271A"

.save:before
  content: "\2714"
  
[data-icon]:before
  font-family: icons
  content: attr(data-icon)
  speak: none
