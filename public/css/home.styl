body.out
  background transparent url('/img/photopipe-home-bg-1.jpeg') no-repeat scroll top left
  height 100%
  font-family 'Helvetica Neue', Helvetica, serif
  font-weight 300
  color #F5F5F5

section
  margin 0 auto

header
  padding 0 20%
  margin-bottom 1.25%

#header-home h1
 color contrastColor
 margin 0
 padding 0
 line-height 1.25

h1, h2, h3, h4, p
  font-weight 100

h1, h2, h3, h4
  text-align center


h4
  font-size 2em
  margin 0
  padding 0

h4 a, h4 a:visited
  color mainColor

h4 a:hover, h4 a:active, h4 a:focus
  color lighten(mainColor,15)
  border-bottom none

h1
  display block
  font-size 4.8em  
  color mainColor
  
h2
  font-size 2.4em

h3
  font-size 2em

#lead
  background transparent
  width 100%
  margin 0 auto
  padding 2.5% 0 0

.login-header
  margin 0 0 4%
  padding 0

.bottom-dotted
  border-bottom 1px dotted #ccc

.section-form
  overflow auto
  background black
  background rgba(0,0,0,0.8)
  max-width 440px
  padding 0 1%
  

.trans-black-bg
  background black
  background rgba(0,0,0,0.8)

#whatis
  margin 2% auto
  padding 2% 1%

#what-is-photopipe-copy p
  margin 2% auto
  font-size 1.6em
  line-height 1.6
   
.login
  display block
  width 100%

.underline
  border-bottom 1px solid #fefefe

.left
  float left

.right
  float right

.border-box
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

.box-flex
  -webkit-box-flex: 1
  -moz-box-flex: 1
  -ms-box-flex: 1
  -webkit-box-flex: 1
  -moz-box-flex: 1
  -ms-box-flex: 1
  -o-box-flex: 1
  box-flex: 1

.login
  padding 3%

fieldset
  margin 5% auto 0
  padding 0

label
  display block
  padding 0 0 2%
  font-size 1.4em
  text-align left

.form-item-wrapper
  margin 7% 0%

.form-item
  width 100%

.input-item
  width 100%
  padding 2.5% 3%
  background-color rgba(255, 255, 255, 0.87)

.input-item:focus
  outline 2px solid lighten(contrastColor,20)

.error-copy
  color red
  line-height 1.8

input[type='url'], 
input[type='email'], 
input[type='text'], 
input[type='password']  
  background: rgba(0,0,0,0.15)
  border-radius: 2px
  box-shadow: 0 1px 0 rgba(255,255,255,0.2), inset 0 1px 1px rgba(0,0,0,0.1)
  -webkit-transition: all 0.3s ease-out
  -moz-transition: all 0.3s ease-out
  -ms-transition: all 0.3s ease-out
  -o-transition: all 0.3s ease-out
  transition: all 0.3s ease-out



input[type='url'], 
input[type='email'], 
input[type='text'], 
input[type='password']
  width: 100%;
  padding: 8px 4px 8px 10px;
  border: 1px solid #4e3043;
  border: 1px solid rgba(78,48,67, 0.8);
  background: rgba(0,0,0,0.15);
  border-radius: 2px;
  box-shadow: 0 1px 0 rgba(255,255,255,0.2), inset 0 1px 1px rgba(0,0,0,0.1);
  -webkit-transition: all 0.3s ease-out;
  -moz-transition: all 0.3s ease-out;
  -ms-transition: all 0.3s ease-out;
  -o-transition: all 0.3s ease-out;
  transition: all 0.3s ease-out;
  font-family: 'Raleway', 'Lato', Arial, sans-serif;
  color: #fff
  font-size: 1.1em



input::-webkit-input-placeholder 
    color: rgba(37,21,26,0.5)
    text-shadow: 0 1px 0 rgba(255,255,255,0.15)

input:-moz-placeholder 
    color: rgba(37,21,26,0.5)
    text-shadow: 0 1px 0 rgba(255,255,255,0.15)

input:-ms-input-placeholder 
    color: rgba(37,21,26,0.5)
    text-shadow: 0 1px 0 rgba(255,255,255,0.15)

input[type='url']:hover, 
input[type='email']:hover, 
input[type='text']:hover, 
input[type='password']:hover
  border-color: #333

input[type='url']:focus, 
input[type='email']:focus, 
input[type='text']:focus, 
input[type='password']:focus,
input[type='submit']:focus 
    box-shadow: 0 1px 0 rgba(255,255,255,0.2), 
        inset 0 1px 1px rgba(0,0,0,0.1),
        0 0 0 3px rgba(255,255,255,0.15)
    outline: none


#copy
  margin 5% auto

#copy p
  margin 2.5% auto 

body.not-implemented #copy p
  font-size 2.2em
