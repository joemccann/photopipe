/* 1em = 16px */
@media only screen and (min-width: 30em) and (max-width: 45em)
  
  body
    padding 2% 1%

  h1
    font-size 2.6em
    
@media only screen and (min-width: 20em) and (max-width: 29.9999em)

  body
    padding 3% 1%

  h1
    font-size 2.4em
    
  #photo-to-pipe li,
  #photo-to-pipe li:first-child,
  #photo-to-pipe li:last-child
    margin 0 0 5%

  .close-one-up
    top -3.5%
    right -3.5%
  
  .one-up
    left 0
    margin 0 5%

  .steps
    font-size 5.4em

  .oauth-page
    margin-top 9%
  
  .button
    font bold 1em/2em Helvetica, Arial 
    