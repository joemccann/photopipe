mainColor = #0CC50C

body
  font: 100% 'Aldrich', Helvetica, Arial, sans-serif

#main
  width 98%
  max-width 720px
  margin 2% auto 0

section
  margin 2.75% auto
  
label
  display block
  padding-bottom 2%
    
input[type='url']
  display block
  width 94%
  padding 1.75%
  margin-bottom 2%
  
fieldset
  background rgba(0,0,0,0.05)
  border 2px dotted mainColor
  padding 3% 5%
  
#demoCurlSection > pre
  background rgba(0,0,0,0.05)
  border 2px dotted mainColor
  padding 3% 5% 

h1
  font-size 3.6em
  line-height .5

.cool
  color mainColor

.button-signing-instagram
  display block
  width 196px
  height 38px
  background transparent url('/img/button-signin-instagram-196x38.png') no-repeat scroll top left