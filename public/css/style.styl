mainColor = #0CC50C

*
  -moz-transition all 0.2s ease
  -o-transition all 0.2s ease
  -webkit-transition all 0.2s ease
  -ms-transition all 0.2s ease

@import 'mixins'
@import 'normalize'

body
  font 100% 'Aldrich', Helvetica, Arial, sans-serif

#main
  width 98%
  max-width 720px
  margin 2% auto 0

section
  margin 2.75% auto
  
label
  display block
  padding-bottom 2%
    
input[type='url']
  display block
  width 94%
  padding 1.75%
  margin-bottom 2%
  
fieldset
  background rgba(0,0,0,0.05)
  border 2px dotted mainColor
  padding 3% 5%
  
#demoCurlSection > pre
  background rgba(0,0,0,0.05)
  border 2px dotted mainColor
  padding 3% 5% 

h1
  font-size 3.6em
  line-height .5

.cool
  color mainColor

.button-signing-instagram
  display block
  width 196px
  height 38px
  background transparent url('/img/button-signin-instagram-196x38.png') no-repeat scroll top left

img
  max-width 100%

#images > img
  padding 1%

#overlay
  z-index 1
  position absolute
  background rgba(0,0,0,0.7)
  width 100%
  height 100%
  display none
  top 0 
  left 0

#one-up
  display none
  padding 2%
  borderRadius(4px)
  background #fff
  z-index 2
  position absolute
  top 4%
  left 25%

#one-up-relative
  position relative

#one-up-controls-wrapper
  position absolute
  bottom 0
  height 36px
  width 100%

#one-up-controls-cancel, #one-up-controls-use
  display inline
  width 50%
  float left
  height 30px
  background #cecece
  font-family Helvetica
  
@import 'responsive'
